# Chatwoot environment configuration for mie.ngo
# Copy this file to `.env` and adjust secrets before running `docker compose up -d`.

# Basic configuration
FRONTEND_URL=https://mie.ngo
BACKEND_URL=https://chat.mie.ngo
SECRET_KEY_BASE=replace_with_long_random_string

# Database configuration
POSTGRES_HOST=postgres
POSTGRES_USERNAME=chatwoot
POSTGRES_PASSWORD=change_me
POSTGRES_DATABASE=chatwoot
POSTGRES_PORT=5432

# Redis configuration
REDIS_URL=redis://redis:6379

# Email configuration
MAILER_SENDER_EMAIL=support@mie.ngo
SMTP_ADDRESS=smtp.mie.ngo
SMTP_PORT=587
SMTP_USERNAME=support@mie.ngo
SMTP_PASSWORD=please_change
SMTP_DOMAIN=mie.ngo
SMTP_AUTHENTICATION=login
SMTP_ENABLE_STARTTLS_AUTO=true

# Optional integrations
DEFAULT_LOCALE=en
ENABLE_ACCOUNT_SIGNUP=true
FORCE_SSL=true

# Admin user bootstrap
SUPER_ADMIN_EMAIL=admin@mie.ngo
SUPER_ADMIN_PASSWORD=change_this_password
